{
    "NOTE": "this deployment uses a proper HA db cluster (not a replication cluster)",
    "NOTE": "this experiment does NOT involve any of the restrictions imposed by configuring cilium",
    "application_name": "wordpress",
    "experiment_name": "wordpress_four",
    "orchestrator": "kubernetes",
    "network_plugin": "cilium",
    "networks_to_tcpdump_on": ["bridge"],
    "class_to_networks": "None",
    "setup" : "None",
    "experiment" : {
      "number_background_locusts": "85",
      "background_locust_spawn_rate": "10",
      "experiment_length_sec": "270",
      "traffic_type" : "normal",
      "number_of_trials": "1"
    },
    "exfiltration_info" : {
      "note": "goal here is just to try to get exfil working for k8s, not necessarily to run a good experiment",
      "exfiltration_path_class":["wwwppp-wordpress", "my-release-pxc" ],
      "exfiltration_path_how_many_instances_for_each_class":[ "1", "1" ],
      "exfiltration_path_class_which_installer": {"wwwppp-wordpress": "apt", "my-release-pxc":"apt"},
      "exfil_protocol": "tcp",
      "folder_to_exfil": "/var/lib/mysql/",
      "regex_of_file_to_exfil": "\"galera.cach*\"",
      "exfil_start_time": "100",
      "exfil_end_time": "150",
      "min_exfil_data_per_packet_bytes": 300,
      "max_exfil_data_per_packet_bytes": 400,
      "avg_exfiltration_rate_KB_per_sec": "1"
    },
    "scale" :{
      "wordpress": 7,
      "mariadb-master": 1,
      "mariadb-slave": 5
    }
}
